<% layout("layouts/boilerplates") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <div class="mt-3">
                    <h3>Create a new Listing</h3>
                </div>
               
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listing[title]" placeholder="Enter a cachy Title" class="form-control" required />
                        <div class="valid-feedback">Title looks goods</div>
                    </div>
           
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea type="text" name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">please enter a short description about the title</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input name="listing[price]" placeholder="1200" class="form-control" required>
                            <div class="invalid-feedback">Price shoul be valid</div>

                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-lable">location</label>
                            <input type="text" name="listing[location]" placeholder="Jaipur,Rajasthan"
                                class="form-control" required>
                                <div class="invalid-feedback">Location should be valid</div>

                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                        <div class="invalid-feedback">Country should be valid</div>

                    </div>
                    <div class="mb-3">
                        <label for="image-url" class="form-lable">Upload Listing Image </label>
                        <input type="file" name="listing[image][url]" class="form-control">
                    </div>
                    <div class="mb-3">
                        <select class="form-select" aria-label="Default select example" name="listing[category]">
                            <option selected>Select your listing Category</option>
                            <option value="Trending">Trending</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Iconic Cities">Iconic Cities</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Castles">Castles</option>
                            <option value="Amazing Pools">Amazing Pools</option>
                            <option value="Campings">Campings</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctics">Arctics</option>
                         </select>
                    </div>
                   
                    <!-- enum:["Trending","Rooms","Iconic Cities","Mountains","Castles","Amazing Pools","Campings","Farms","Arctics"], -->

                    <div class="mb-3 ">
                        <button class="btn btn-dark add-btn">Add</button>
                    </div>

                </form>
            </div>
        </div>
    </body>